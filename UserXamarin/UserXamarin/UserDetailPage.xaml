<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="UserXamarin.UserDetailPage"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
    ios:Page.UseSafeArea="true" BackgroundColor="LightGray">

    <ContentPage.Content>
        <AbsoluteLayout>
            <Button Text="Close" x:Name="closeButton" AbsoluteLayout.LayoutBounds="1,0,-1,-1" AbsoluteLayout.LayoutFlags="XProportional" Margin="0,0,10,0"/>
            <StackLayout BackgroundColor="White"
                     AbsoluteLayout.LayoutBounds="0.5,0.5,0.8,-1"
                     AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional" Spacing="16">
                <BoxView HeightRequest="16"/>
                <Frame WidthRequest="160" HeightRequest="160" CornerRadius="80" HasShadow="False" IsClippedToBounds="True" Padding="0" HorizontalOptions="Center">
                    <Image x:Name="profileImage" />
                </Frame>
                <Label TextColor="Black" x:Name="nameLabel" FontSize="Title" HorizontalTextAlignment="Center"/>
                <Label TextColor="Black" x:Name="emailLabel" FontSize="Small" HorizontalTextAlignment="Center"/>
                <BoxView HeightRequest="16"/>
            </StackLayout>
            
        </AbsoluteLayout>
    </ContentPage.Content>

</ContentPage>

